<div class="container">
    <h1>All Cocktails</h1>
  <ul>
    <% @cocktails.each do |cocktail| %>
    <li>
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    <% end %>
    </li>
  </ul>
  <div>
    <%= link_to "Add Cocktail", new_cocktail_path, class:"btn btn-primary" %>
  </div>
</div
